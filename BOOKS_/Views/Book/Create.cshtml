@model Book
<h2 class="text-primary">
	Add New Book</h2>
<hr />
@{
	SelectList selectListItems = new SelectList(ViewBag.categories,"Id", "Name");
}
<form asp-action="SaveCreate" asp-controller="Book" method="post">
	<div asp-validation-summary="All"></div>
	<div>
		<label asp-for="Title" style="font-weight: bold;"></label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Author" style="font-weight: bold;"></label>
		<input asp-for="Author" class="form-control" />
		<span asp-validation-for="Author" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Description" style="font-weight: bold;"></label>
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="CategoryId" style="font-weight: bold;"></label>
		<select asp-items="selectListItems" asp-for="CategoryId" class="form-control">
		</select>
		<span asp-validation-for="CategoryId" class="text-danger"></span>
	</div>

	<input type="submit" value="Add" class="btn-btn-primary" style="background-color: blue; color: white;" />
</form>
<hr />
<form action="/Book/Index" method="post">
	<button style="background-color: blue; color: white;">GO To List</button>
</form>
<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
