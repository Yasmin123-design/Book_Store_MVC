@model List<Book>
<h2 class="text-primary">Books</h2>
<hr />
<a href="/Book/Create" class="btn btn-primary">
	<i class="icofont-plus"></i>
	Add New
</a>
<hr />
@if(!Model.Any())
{
	<div class="alert alert-warning">
		No Books Added Yet!!!
	</div> 
}
else
{
<table class="table table-border table-hover">
	<thead>
		<tr>
			<th>Author</th>
			<th>Title</th>
			<th>Date_AddedOn</th>
			<th>Description</th>
			<th>CategoryId</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Author</td>
				<td>@item.Title</td>
				<td>@item.AddOn</td>
				<td>@item.Description</td>
				<td>@item.CategoryId</td>

				<td>
					<form action="/Book/Edit/@item.Id" method="post">
						<button style="background-color: blue; color: white;">Edit</button>
					</form>
				</td>

				<td>
					<form action="/Book/Details/@item.Id" method="post">
						<button style="background-color: blue; color: white;">Details</button>
					</form>
				</td>
				<td>
					<form action="/Book/Delete/@item.Id" method="post">
						<button class ="btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
}